@model IEnumerable<vw_CartView>

@{
    ViewBag.Title = "MyCart";
    Layout = "~/Views/Shared/_StandardLayout.cshtml";

    decimal totalPrice = 0;

    var user = Session["User"] as User;
}

<!-- Favicon -->
<link href="~/Content/MainTemplate/img/favicon.ico" rel="icon">

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Nunito:600,700" rel="stylesheet">

<!-- CSS Libraries -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
<link href="~/Content/MainTemplate/lib/animate/animate.min.css" rel="stylesheet">
<link href="~/Content/MainTemplate/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link href="~/Content/MainTemplate/lib/flaticon/font/flaticon.css" rel="stylesheet">
<link href="~/Content/MainTemplate/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Wano Quin:wght@900&display=swap" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Blinker:wght@300;400;700&display=swap" />

<!-- Template Stylesheet -->
<link href="~/Content/bootstrap-5.3.3-dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/MainTemplate/css/style.css" rel="stylesheet">

@Html.Partial("_Loader")

<h5 style="padding:1rem 0 0.5rem"><a href="#" style="text-decoration:none" onclick="history.back()">Go back</a></h5>

<h2 style="margin:4rem 0 3rem">Shopping Cart</h2>

<table id="carttable" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="65%">@item.RecipeName</td>
                <td width="15%">@Convert.ToDecimal(item.Price).ToString("0.00")</td>
                <td>
                    <input style="width:5rem" type="number" min="0" value="@item.Qty" class="qty-input" data-cartid="@item.CartID" />
                </td>
                <td width="20%" class="total-price">&#8369; @Convert.ToDecimal(item.Total_Price).ToString("0.00")</td>
                <td width="20%"><a style="text-decoration:none; color:red; cursor:pointer" class="delete-link" data-cartid="@item.CartID">Delete</a></td>
            </tr>

            totalPrice += Convert.ToDecimal(item.Total_Price);
        }
    </tbody>
</table>

<div class="footer" style="display:flex; background:none !important; justify-content:center; align-items:center; gap:1rem;">
    <div>
        <h6>Total (@Model.Count() item/s):</h6>
        <h1 id="footerTotalPrice">&#8369; @totalPrice.ToString("0.00")</h1>
    </div>
    <div>
        @if(totalPrice > 0)
        {
            <button class="checkoutbtn" onclick="window.location.href='/UsersPage/CheckOutPage/@user.userID'">Check Out</button>
        }
        else
        {
            <button class="checkoutbtn" style="pointer-events:none; opacity:0.5;">Check Out</button>
        }
    </div>
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/MainTemplate/lib/easing/easing.min.js"></script>
<script src="~/Content/MainTemplate/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="~/Content/MainTemplate/lib/tempusdominus/js/moment.min.js"></script>
<script src="~/Content/MainTemplate/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="~/Content/MainTemplate/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<!-- Contact Javascript File -->
<script src="~/Content/MainTemplate/mail/jqBootstrapValidation.min.js"></script>
<script src="~/Content/MainTemplate/mail/contact.js"></script>

<!-- Template Javascript -->
<script src="~/Content/MainTemplate/js/main.js"></script>
<script src="~/Content/bootstrap-5.3.3-dist/js/bootstrap.js"></script>

<script src="~/Content/HideSomeeAds/removewatermark.js"></script>
<script>
    $(document).ready(function () {
        $(document).on('click', '.delete-link', function (event) {
            event.preventDefault();

            var cartId = $(this).data('cartid');

            $.ajax({
                url: '/UsersPage/RemoveItem',
                type: 'POST',
                data: { itemID: cartId },
                success: function (response) {
                    console.log(`Item deleted successfully! ${cartId}`);
                    $(event.target).closest('tr').remove();
                    updateTotalPrice(cartId);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                    console.log('Error deleting item: ' + error);
                },
                complete: function () {
                    window.location.reload();
            }
            });
        });

        $(document).on('blur', '.qty-input', function (event) {
            var cartId = $(this).data('cartid');
            var newQty = $(this).val();

            $.ajax({
                url: '/UsersPage/UpdateQuantity',
                type: 'POST',
                data: { cartId: cartId, newQty: newQty },
                success: function (response) {
                    if (response.zeroUnit) {
                        $(event.target).closest('tr').remove();
                        updateTotalPrice(cartId);
                    } else {
                        updateTotalPrice(cartId);
                    }
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        });

        function updateTotalPrice(cartId) {
            $.ajax({
                url: '/UsersPage/GetTotalPrice',
                type: 'POST',
                data: { cartId: cartId },
                success: function (data) {
                    var totalPriceElement = $('.qty-input[data-cartid="' + cartId + '"]').closest('tr').find('.total-price');
                    totalPriceElement.text(data.TotalPrice.toFixed(2));

                    var footerTotalPrice = 0;
                    $('.total-price').each(function () {
                        footerTotalPrice += parseFloat($(this).text());
                    });

                    var checkoutButton = $('.checkoutbtn');
                    if (footerTotalPrice > 0) {
                        @*<button class="checkoutbtn" onclick="window.location.href='/UsersPage/CheckOutPage/@user.userID'">Check Out</button>*@
                        checkoutButton.css('pointer-events', 'auto').css('opacity', '1').removeAttr('disabled');
                        checkoutButton.css('onclick', "window.location.href='/UsersPage/CheckOutPage/@user.userID'")
                    } else {
                        checkoutButton.css('pointer-events', 'none').css('opacity', '0.5').attr('disabled', 'disabled');
                    }
                    $('#footerTotalPrice').text(footerTotalPrice.toFixed(2));
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
    });

    $(document).ready(function () {
        // Initialize DataTable
        $('#carttable').DataTable();
    });
</script>
