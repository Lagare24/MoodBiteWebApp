    <script>
        $(document).ready(function(){
            // Function to handle click event on nav links
            $('.nav-item.nav-link').click(function(){
                // Remove active class from all nav links
                $('.nav-item.nav-link').removeClass('active');
                // Add active class to the clicked nav link
                $(this).addClass('active');
            });


            var sectionIDs = ['#home', '#about', '#feature', '#price', '#contact'];


            // Function to handle scroll event
            $(window).scroll(function () {
                var scrollDistance = $(window).scrollTop();
                // Assign IDs of the sections you want to target
                var sectionIDs = ['#homeTopPage', '#about', '#feature', '#price', '#contact'];
                $(sectionIDs).each(function (i, sectionID) {
                    var sectionTop = $(sectionID).offset().top;
                    var sectionBottom = sectionTop + $(sectionID).outerHeight();
                    if (scrollDistance >= sectionTop && scrollDistance < sectionBottom) {
                        // Remove active class from all nav links
                        $('.nav-item.nav-link').removeClass('active');
                        // Add active class to the corresponding nav link
                        if (sectionID === '#homeTopPage') {
                            $('.nav-item.nav-link[href="@homeUrl"]').addClass('active');
                        } else {
                            $('.nav-item.nav-link[href="' + sectionID + '"]').addClass('active');
                        }
                    }
                });
            }).scroll(); // Trigger scroll event on page load
        });

        $(document).ready(function() {
            $(document).on('click', '#sendMessageButton', function(event) {
            event.preventDefault();
            showLoader();

            $.ajax({
              url: '@Url.Action("SubmitTestimony", "Home")',
              type: 'POST',
              data: {
                name: $('#name').val(),
                email: $('#email').val(),
                profession: $('#subject').val(),
                message: $('#message').val()
              },
              success: function(response) {
                alert(response.msg);
                window.location.reload();
              },
              error: function(xhr, status, error) {
                console.log('An error has occurred: ' + error);
                window.location.reload();
              },
              complete: function() {
                hideLoader();
              }
            });
          });
        });
    </script>
