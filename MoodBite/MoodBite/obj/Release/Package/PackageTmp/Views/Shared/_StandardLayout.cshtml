        $(document).ready(function () {
            // Store the original search widget
            var originalSearchWidget = $('.search-widget').clone();

            // Function to handle scroll event
            $(window).scroll(function () {
                // Check if the navbar has become sticky
                var isNavSticky = $('.navbar').hasClass('nav-sticky');

                // Check if the search widget has already been transferred
                var searchWidgetExists = $('.navbar .search-widget').length > 0;

                if (isNavSticky && !searchWidgetExists) {
                    // Find the first element in the navbar
                    var firstElement = $('.container-fluid').children().first();
                    // Clone the original search widget and insert it after the first element
                    var clonedSearchWidget = originalSearchWidget.clone();
                    firstElement.after(clonedSearchWidget);

                    // Set the width of the search input to 45rem
                    clonedSearchWidget.find('input[type="text"]').css('width', '45rem');
                    // Set the right attribute of the search input to 4.5%
                    clonedSearchWidget.find('input[type="text"]').css('right', '4.5%');

                    // Hide the original search widget
                    $('.container .search-widget').hide();
                } else if (!isNavSticky && searchWidgetExists) {
                    // Remove the search widget from the sticky navbar if it's not sticky
                    $('.navbar .search-widget').remove();

                    // Show the original search widget
                    $('.container .search-widget').show();
                }

                // Adjust the width and right attribute of the search input field based on the navbar sticky state
                if (searchWidgetExists) {
                    var searchInput = $('.navbar .search-widget input[type="text"]');
                    if (isNavSticky) {
                        searchInput.css('width', '45rem');
                        searchInput.css('right', '4.5%');
                    } else {
                        searchInput.css('width', ''); // Remove the width style
                        searchInput.css('right', ''); // Remove the right style
                    }
                }
            });
        });


        function searchRecipe() {
            event.preventDefault();
            $('#loadertxt').text('Searching...');
            showLoader();

            var allergyValues = $('input[name="allergyInp[]"]').map(function() {
                return this.value;
            }).get();

            var intoleranceValues = $('input[name="intoleranceInp[]"]').map(function() {
                return this.value;
            }).get();

            var foodCategoryValues = $('input[name="foodCategoryInp[]"]').map(function() {
                return this.value;
            }).get();

            $.ajax({
                url: '@Url.Action("UsersHome", "UsersPage")',
                data: {
                    search: $('#searchinp').val(),
                    allergyInp: allergyValues,
                    intoleranceInp: intoleranceValues,
                    foodCategoryInp: foodCategoryValues
                },
                type: 'post',
                success: function(response) {
                    if (response.success) {
                        window.location.href = '@Url.Content("~/UsersPage/UsersHome")';
                    } else {
                        alert(response.msg);
                        window.location.reload();
                    }
                },
                error: function(xhr, status, error) {
                    alert(error);
                    window.location.reload();
                },
                complete: function() {}
            });
        }

