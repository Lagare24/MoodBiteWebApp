        <div class="form-group">
            <label for="imageFile" class="control-label col-md-12">Upload Recipes Cover Picture</label>
            <div class="col-md-12">
                @if (recipeImage != null)
                {
                    if (!string.IsNullOrEmpty(recipeImage.ImagePath))
                    {
                        <input type="file" name="imageFile" id="imageInput" accept="image/*" value="@Url.Content(recipeImage.ImagePath)" />
                    }
                    else
                    {
                        <input type="file" name="imageFile" id="imageInput" accept="image/*" required />
                    }
                }
