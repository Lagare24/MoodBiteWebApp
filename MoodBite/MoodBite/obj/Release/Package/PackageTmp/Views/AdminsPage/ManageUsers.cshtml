                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Actions
                        </button>
                        <div class="dropdown-menu" aria-labelledby="actionsDropdown">
                            <a class="dropdown-item" href="#" onclick="editUser(@item.ID)">Edit</a>
                            <a class="dropdown-item" href="#" onclick="viewUserDetails(@item.ID)">Details</a>
                            <a class="dropdown-item" href="#" onclick="deleteUser(@item.ID)">Delete</a>
