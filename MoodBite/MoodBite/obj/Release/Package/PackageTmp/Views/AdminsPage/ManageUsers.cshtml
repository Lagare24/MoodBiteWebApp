<script>
    $(document).ready(function () {
        // Initialize DataTable
        $('#manageuserstable').DataTable();
    });

    function editUser(id) {
        showLoader();
        window.location.href = `/AdminsPage/EditUser/${id}`;
        //hideLoader();
    }

    function viewUserDetails(id) {
        showLoader();
        window.location.href = `/AdminsPage/ViewUserDetails/${id}`;
        //hideLoader();
    }

    function deleteUser(id) {
        /*
        if yes then do this (showLoader();
        window.location.href = `/AdminsPage/DeleteUser/${id}`;)
        otherwise just do nothing
        */
        if(confirm("Are you sure you want to delete this user?")){
            showLoader();
            $.ajax({
                url: '/AdminsPage/DeleteUser/' + id,
                type: 'POST',
                success: function (response) {
                    if (response.success) {
                        alert('User deleted successfully!');
                        window.location.reload();
                    } else {
                        alert('Failed to delete user.');
                        window.location.reload();
                    }
                },
                error: function () {
                    alert('An error occurred.');
                },
                complete: function () {
                    hideLoader();
                }
            });
        }
        //hideLoader();
    }
</script>